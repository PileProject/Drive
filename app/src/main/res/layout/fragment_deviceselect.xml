<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity" >

    <LinearLayout
        android:id="@+id/deviceselect.bondedDeviceLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deviceselect.bondedDeviceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666"
            android:paddingLeft="5dp"
            android:text="@string/deviceselect.title.bondedDevice"
            android:textColor="#fff" />

        <ListView
            android:id="@+id/deviceselect.bondedDeviceList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/deviceselect.emptyBondedDeviceList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:text="@string/deviceselect.noDeviceBonded"
            android:textSize="36sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/deviceselect.discoverButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deviceselect.button.discover" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/deviceselect.newDeviceLayoutFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/deviceselect.newDeviceLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/deviceselect.newDeviceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666"
                android:paddingLeft="5dp"
                android:text="@string/deviceselect.title.newDevice"
                android:textColor="#fff" />

            <ListView
                android:id="@+id/deviceselect.newDeviceList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/deviceselect.emptyNewDeviceList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="@string/deviceselect.noDeviceFound"
                android:textSize="36sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/deviceselect.backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:visibility="invisible"
            android:text="@string/back"/>
    </RelativeLayout>
</LinearLayout>